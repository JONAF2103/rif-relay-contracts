{
  "name": "@rsksmart/rif-relay-contracts",
  "version": "0.0.2-alpha.10",
  "description": "This project contains all the contracts needed for the rif relay system.",
  "main": "dist/index.js",
  "private": false,
  "scripts": {
    "dist": "scripts/dist",
    "deploy": "scripts/deploy",
    "compile": "scripts/compile",
    "prepack": "npmignore --auto",
    "prepare": "scripts/prepare",
    "prepublishOnly": "scripts/prepublishOnly",
    "lint:ts": "eslint . --ext .ts",
    "lint:ts:fix": "eslint . --ext .ts --fix",
    "lint:sol": "solhint -f unix \"contracts/**/*.sol\" --max-warnings 0",
    "allowTokens": "./scripts/allowTokens",
    "allowedTokens": "./scripts/allowedTokens",
    "prettier:fix": "npx prettier --write --ignore-unknown .",
    "prettier": "npx prettier --check .",
    "test": "truffle test --network regtest"
  },
  "author": "Relaying Services Team",
  "license": "MIT",
  "publishConfig": {
    "ignore": [
      "!dist",
      "!build",
      "!test",
      "src",
      ".github"
    ]
  },
  "dependencies": {
    "@openzeppelin/contracts": "~3.2.0",
    "@truffle/hdwallet-provider": "^2.0.14",
    "ethereumjs-util": "~6.2.1",
    "npmignore": "^0.3.0",
    "web3-utils": "^1.7.5"
  },
  "devDependencies": {
    "@openzeppelin/test-helpers": "^0.5.15",
    "@typechain/web3-v1": "^6.0.1",
    "@types/chai": "^4.3.3",
    "@types/chai-as-promised": "^7.1.3",
    "@types/mocha": "^9.1.1",
    "@types/node": "^18.7.4",
    "@typescript-eslint/eslint-plugin": "~4.28.3",
    "@typescript-eslint/parser": "~4.28.3",
    "chai": "^4.3.6",
    "chai-as-promised": "^7.1.1",
    "eslint": "~7.30.0",
    "eth-gas-reporter": "^0.2.25",
    "husky": "~6.0.0",
    "prettier": "^2.3.0",
    "solhint": "3.0.0",
    "truffle": "^5.5.26",
    "ts-node": "^10.9.1",
    "typechain": "^8.1.0",
    "typescript": "^4.7.4",
    "web3": "^1.7.5",
    "yargs": "~17.1.1"
  }
}
