    "@types/node": "^13.0.0",
    "patch-package": "^6.4.6",
    "truffle-hdwallet-provider": "^1.0.17"
  },
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "^4.28.3",
    "@typescript-eslint/parser": "^4.28.3",
    "eslint": "^7.30.0",
    "husky": "^6.0.0",
    "prettier": "2.3.0",
    "solhint": "3.0.0",
    "truffle": "^5.1.52",
    "ts-loader": "^9.2.3",
    "ts-node": "8.6.2",
    "tslint": "^6.1.3",
    "typechain": "1.0.5",
    "typechain-target-trufflehotfix": "0.0.4-alpha",
    "typescript": "^4.3.5",
    "webpack": "^5.43.0",
    "webpack-cli": "^4.7.2",
    "webpack-node-externals": "^3.0.0"
